<h1>Edit a Task</h1>

<%= form_for @task do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.check_box :completed %>
    <%= form.label :completed %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
